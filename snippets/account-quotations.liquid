<h2 class="section-title">Quotations</h2>
{% if customer %}
  {% assign quotations = customer.metafields.custom.quotations %}
  {% if quotations and quotations != blank %}
    <div class="quotations-list">
      <table style="width:100%; border-collapse:collapse; margin-top:1em;">
        <thead>
          <tr>
            <th style="text-align:left; border-bottom:1px solid #e0e0e0; padding:8px;">Quotation Name</th>
            <th style="text-align:left; border-bottom:1px solid #e0e0e0; padding:8px;">View/Download</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td style="padding:8px;">Quote #1</td>
            <td style="padding:8px;">
              <a href="{% if quotations contains 'http' %}{% if quotations.first %}{{ quotations.first }}{% else %}{{ quotations }}{% endif %}{% endif %}" target="_blank" rel="noopener" class="btn" style="background:#b8bb8a; color:#fff; padding:8px 18px; border-radius:4px; text-decoration:none;">View Quote</a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  {% else %}
    <div class="empty-state">
      <div class="empty-state-icon">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
      </div>
      <h3>No Quotations</h3>
      <p>You don't have any quotations at this time.</p>
    </div>
  {% endif %}
{% else %}
  <div class="empty-state">
    <div class="empty-state-icon">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
        <polyline points="14 2 14 8 20 8"></polyline>
        <line x1="16" y1="13" x2="8" y2="13"></line>
        <line x1="16" y1="17" x2="8" y2="17"></line>
        <polyline points="10 9 9 9 8 9"></polyline>
      </svg>
    </div>
    <h3>No Quotations</h3>
    <p>You don't have any quotations at this time.</p>
  </div>
{% endif %}

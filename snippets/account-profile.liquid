<h2 class="section-title">Profile Information</h2>
<form method="post" action="/account" accept-charset="UTF-8" class="customer-form">
  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="form_type" value="customer">
  <input type="hidden" name="utf8" value="âœ“">

  <div class="form-group">
    <label for="CompanyName">Company Name</label>
    <input type="text" class="form-control" name="customer[note]" value="{{ customer.note }}" placeholder="Company Name">
  </div>

  <div class="form-group">
    <label for="Phone">Phone Number</label>
    <input type="text" class="form-control" name="customer[phone]" value="{{ customer.phone }}" placeholder="Phone Number">
  </div>

  <div class="form-group">
    <label for="Email">Email Address</label>
    <input type="email" class="form-control" name="customer[email]" value="{{ customer.email }}" placeholder="Email Address">
  </div>

  <button type="submit" class="custom-button btn btn-primary">Update Information</button>
</form>

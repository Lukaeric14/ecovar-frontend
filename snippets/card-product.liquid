<style>
  /* Clean product card styling */
  .product-card-wrapper {
    height: 100%;
  }
  
  .product-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    background: white;
    overflow: hidden;
  }
  
  /* Image container */
  .product-card__media {
    height: 220px;
    padding: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
  }
  
  /* Image styling */
  .product-card__image {
    max-height: 180px;
    max-width: 85%;
    width: auto;
    height: auto;
    object-fit: contain;
  }
  
  /* Content area */
  .product-card__content {
    padding: 15px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  /* Product title */
  .product-card__title {
    font-size: 14px;
    line-height: 1.3;
    height: 2.6em;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 10px;
  }
  
  /* Price area */
  .product-card__price {
    margin-top: auto;
  }
  
  /* Badge styling */
  .product-card__badge {
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 2;
  }
  
  .badge {
    background: #e22120;
    color: white;
    padding: 3px 8px;
    font-size: 12px;
    border-radius: 2px;
  }
</style>

{%- if card_product and card_product != empty -%}
  <div class="product-card-wrapper">
    <a href="{{ card_product.url }}" class="product-card">
      <!-- Product Media -->
      <div class="product-card__media">
        {%- if card_product.featured_media -%}
          <img
            src="{{ card_product.featured_media | image_url: width: 300 }}"
            alt="{{ card_product.featured_media.alt | escape }}"
            class="product-card__image"
            {% unless lazy_load == false %}loading="lazy"{% endunless %}
            width="{{ card_product.featured_media.width }}"
            height="{{ card_product.featured_media.height }}"
          >
        {%- else -%}
          {{ 'product-apparel-2' | placeholder_svg_tag: 'product-card__image placeholder-svg' }}
        {%- endif -%}
      </div>
      
      <!-- Product Content -->
      <div class="product-card__content">
        <!-- Product Title -->
        <h3 class="product-card__title">
          {{ card_product.title | escape }}
        </h3>
        
        <!-- Product Vendor -->
        {%- if show_vendor -%}
          <div class="product-card__vendor caption-with-letter-spacing">
            {{ card_product.vendor }}
          </div>
        {%- endif -%}
        
        <!-- Product Price -->
        <div class="product-card__price">
          {% render 'price', product: card_product %}
        </div>
      </div>
    </a>
  </div>
{%- else -%}
  <div class="product-card-wrapper">
    <div class="product-card">
      <div class="product-card__media">
        {{ 'product-apparel-2' | placeholder_svg_tag: 'product-card__image placeholder-svg' }}
      </div>
      <div class="product-card__content">
        <h3 class="product-card__title">
          <a role="link" aria-disabled="true" class="full-unstyled-link">
            {{ 'onboarding.product_title' | t }}
          </a>
        </h3>
        <div class="product-card__price">
          {% render 'price' %}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

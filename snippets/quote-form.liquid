<div id="quote-popup" class="quote-popup">
  <div class="quote-popup-content">
    <span class="quote-popup-close">&times;</span>
    <h2>Submit Your Quote Request</h2>
    <p>Please provide your contact details and we'll get back to you with a customized quote.</p>
    
    <form id="quote-form" method="post">
      <div class="form-field">
        <label for="quote-name">Your Name*</label>
        <input type="text" id="quote-name" name="quote-name" required>
      </div>
      
      <div class="form-field">
        <label for="quote-email">Your Email*</label>
        <input type="email" id="quote-email" name="quote-email" required>
      </div>
      
      <div class="form-field">
        <label for="quote-phone">Phone Number</label>
        <input type="tel" id="quote-phone" name="quote-phone">
      </div>
      
      <div class="form-field">
        <label for="quote-company">Company Name</label>
        <input type="text" id="quote-company" name="quote-company">
      </div>
      
      <div class="form-field">
        <label for="quote-message">Additional Comments</label>
        <textarea id="quote-message" name="quote-message" rows="4"></textarea>
      </div>
      
      <div class="form-actions">
        <button type="submit" id="submit-quote-btn" class="button">Send Quote Request</button>
      </div>
    </form>
  </div>
</div>

<style>
  .quote-popup {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0,0,0,0.4);
  }
  
  .quote-popup-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 600px;
    border-radius: 8px;
    position: relative;
  }
  
  .quote-popup-close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
    position: absolute;
    right: 20px;
    top: 10px;
  }
  
  .quote-popup-close:hover,
  .quote-popup-close:focus {
    color: black;
    text-decoration: none;
  }
  
  .form-field {
    margin-bottom: 15px;
  }
  
  .form-field label {
    display: block;
    margin-bottom: 5px;
    font-weight: 500;
  }
  
  .form-field input,
  .form-field textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  
  .form-actions {
    margin-top: 20px;
    text-align: right;
  }
  
  #submit-quote-btn {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 4px;
  }
  
  #submit-quote-btn:hover {
    background-color: #45a049;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Don't setup for logged in users
    {% if customer %}
      return;
    {% endif %}
    
    // Get DOM elements
    const quotePopup = document.getElementById('quote-popup');
    const closeBtn = document.querySelector('.quote-popup-close');
    const quoteForm = document.getElementById('quote-form');
    const checkoutBtn = document.getElementById('checkout');
    
    // Show popup when checkout button is clicked
    if (checkoutBtn) {
      checkoutBtn.addEventListener('click', function(e) {
        e.preventDefault();
        quotePopup.style.display = 'block';
      });
    }
    
    // Close popup when X is clicked
    if (closeBtn) {
      closeBtn.addEventListener('click', function() {
        quotePopup.style.display = 'none';
      });
    }
    
    // Close popup when clicking outside of it
    window.addEventListener('click', function(e) {
      if (e.target === quotePopup) {
        quotePopup.style.display = 'none';
      }
    });
    
    // Handle form submission
    if (quoteForm) {
      quoteForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form data
        const formData = {
          name: document.getElementById('quote-name').value,
          email: document.getElementById('quote-email').value,
          phone: document.getElementById('quote-phone').value,
          company: document.getElementById('quote-company').value,
          message: document.getElementById('quote-message').value,
          cartItems: []
        };
        
        // Get cart items
        {% for item in cart.items %}
        formData.cartItems.push({
          title: {{ item.product.title | json }},
          quantity: {{ item.quantity }},
          variant: {{ item.variant.title | json }},
          sku: {{ item.sku | json }}
        });
        {% endfor %}
        
        // Submit form data via fetch
        fetch('https://formsubmit.co/info@ecovargroup.com', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify({
            name: formData.name,
            email: formData.email,
            phone: formData.phone,
            company: formData.company,
            message: formData.message,
            cart: JSON.stringify(formData.cartItems),
            _subject: 'New Quote Request from ' + formData.name
          })
        })
        .then(response => {
          if (response.ok) {
            // Show success message
            quotePopup.innerHTML = `
              <div class="quote-popup-content">
                <h2>Thank You!</h2>
                <p>Your quote request has been submitted successfully. We'll get back to you as soon as possible.</p>
                <button class="button" onclick="window.location.href='/'">Continue Shopping</button>
              </div>
            `;
          } else {
            throw new Error('Network response was not ok');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          // Show error message
          alert('There was a problem submitting your quote. Please try again or contact us directly.');
        });
      });
    }
  });
</script>

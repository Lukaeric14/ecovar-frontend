{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .about-us-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .about-us-title {
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2.5rem; /* Increased spacing */
  }

  .about-us-section {
    margin-bottom: 4rem;
  }

  .about-us-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media screen and (min-width: 750px) {
    .about-us-content {
      grid-template-columns: 1fr 2fr;
      gap: 3rem;
    }
  }

  .about-us-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .about-us-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .about-us-text h2 {
    font-size: 1.8rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .about-us-text p {
    font-size: 1.35rem; /* Increased font size */
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .industry-leadership {
    margin-top: 3rem;
    margin-bottom: 3rem;
    border-top: 1px solid #e1e1e1;
    padding-top: 3rem;
  }

  .industry-leadership__title {
    font-size: 2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }

  .industry-leadership__content {
    margin-bottom: 2rem;
  }

  .industry-leadership__text {
    font-size: 1.35rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    color: #333;
  }

  .industry-leadership__image {
    display: flex;
    justify-content: center;
    margin: 2rem 0;
  }

  .industry-leadership__image img {
    max-width: 100%;
    height: auto;
  }
  
  .industry-leadership__article {
    margin-top: 2rem;
    padding: 1.5rem;
    background-color: #f9f9f9;
    border-left: 4px solid #333;
    border-radius: 0 4px 4px 0;
    transition: all 0.3s ease;
  }
  
  .industry-leadership__article:hover {
    background-color: #f0f0f0;
    transform: translateX(5px);
  }
  
  .industry-leadership__article-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.8rem;
    color: #333;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .industry-leadership__article-title svg {
    width: 18px;
    height: 18px;
  }
  
  .industry-leadership__article-content {
    font-style: italic;
    line-height: 1.6;
    margin-bottom: 1rem;
    color: #444;
    position: relative;
  }
  
  .industry-leadership__article-content::before {
    content: '"';
    font-size: 1.8rem;
    position: absolute;
    left: -1rem;
    top: -0.5rem;
    color: #ddd;
  }
  
  .industry-leadership__article-link {
    display: inline-block;
    color: #333;
    font-weight: 500;
    text-decoration: underline;
    transition: color 0.2s ease;
  }
  
  .industry-leadership__article-link:hover {
    color: #000;
  }
  
  /* How We Lead Section Styles */
  .how-we-lead {
    margin-top: 3rem;
    margin-bottom: 3rem;
    border-top: 1px solid #e1e1e1;
    padding-top: 3rem;
  }
  
  .how-we-lead__title {
    font-size: 2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 2.5rem;
    color: #333;
  }
  
  .how-we-lead__columns {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-top: 2rem;
  }
  
  @media screen and (min-width: 750px) {
    .how-we-lead__columns {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media screen and (min-width: 990px) {
    .how-we-lead__columns {
      grid-template-columns: repeat(5, 1fr);
      gap: 1.5rem;
    }
  }
  
  .column {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .column__icon {
    width: 60px;
    height: 60px;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .column__icon svg {
    width: 100%;
    height: 100%;
  }
  
  .column__title {
    font-size: 1.2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 0.8rem;
    color: #333;
  }
  
  .column__text {
    font-size: 0.9rem;
    line-height: 1.4;
    text-align: center;
    color: #333;
  }

  .about-us-in-the-news__images-container {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    gap: 1.5rem;
    margin-top: 2rem;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .about-us-in-the-news__image {
    flex: 1;
    width: 30%;
    max-height: 250px;
    object-fit: contain;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    border-radius: 4px;
  }
  
  @media screen and (max-width: 749px) {
    .about-us-in-the-news__images-container {
      flex-direction: column;
    }
    
    .about-us-in-the-news__image {
      width: 100%;
      margin-bottom: 1rem;
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <div class="about-us-container">
    <h1 class="about-us-title">{{ section.settings.title | escape }}</h1>
    
    <!-- About Us Section -->
    <div class="about-us-section">
      <div class="about-us-content">
        <div class="about-us-image">
          {%- if section.settings.image != blank -%}
            {{ 
              section.settings.image
              | image_url: width: 600
              | image_tag: 
                loading: 'lazy',
                sizes: '(min-width: 750px) 50vw, 100vw',
                widths: '375, 550, 750, 1100'
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        <div class="about-us-text">
          {%- if section.settings.heading != blank -%}
            <h2>{{ section.settings.heading }}</h2>
          {%- endif -%}
          
          {%- if section.settings.text != blank -%}
            <div class="rte">
              {{ section.settings.text }}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
    
    <!-- Industry Leadership Section -->
    <div class="industry-leadership">
      <h2 class="industry-leadership__title">{{ section.settings.leadership_title }}</h2>
      
      <div class="industry-leadership__content">
        <div class="industry-leadership__text rte">
          {{ section.settings.leadership_text }}
        </div>
        
        <div class="industry-leadership__image">
          {%- if section.settings.leadership_image != blank -%}
            {{
              section.settings.leadership_image
              | image_url: width: 800
              | image_tag:
                loading: 'lazy',
                width: 800,
                height: section.settings.leadership_image.height,
                alt: section.settings.leadership_image.alt | escape
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
        
        <!-- CEO Article Snippet -->
        <a href="{{ section.settings.article_url }}" class="industry-leadership__article" target="_blank" rel="noopener">
          <div class="industry-leadership__article-title">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M19 5v14H5V5h14m0-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" fill="#333"/>
              <path d="M14 17H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z" fill="#333"/>
            </svg>
            {{ section.settings.article_title }}
          </div>
          <div class="industry-leadership__article-content">
            {{ section.settings.article_snippet }}
          </div>
          <span class="industry-leadership__article-link">Read the full article</span>
        </a>
      </div>
    </div>

    <!-- In the News Section -->
    <div class="about-us-section">
      <div class="about-us-content">
        <div class="about-us-text">
          <h2>{{ section.settings.news_section_title }}</h2>
          <p>{{ section.settings.news_section_description }}</p>
        </div>
        <div class="about-us-image">
          <div class="about-us-in-the-news__images-container">
            {% for block in section.blocks %}
                <img
                  src="{{ block.settings.image | image_url: width: 400 }}" 
                  alt="{{ block.settings.image.alt | escape }}"
                  class="about-us-in-the-news__image"
                  loading="lazy"
                >
            {% endfor %}
          </div>
        </div>
      </div>
    </div>

  </div>
</div>


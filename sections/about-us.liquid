{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .about-us-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .about-us-title {
    font-size: 2.5rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 2rem;
  }

  .about-us-section {
    margin-bottom: 4rem;
  }

  .about-us-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media screen and (min-width: 750px) {
    .about-us-content {
      grid-template-columns: 1fr 2fr;
      gap: 3rem;
    }
  }

  .about-us-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .about-us-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .about-us-text h2 {
    font-size: 1.8rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .about-us-text p {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .industry-leadership {
    margin-top: 3rem;
    margin-bottom: 3rem;
    border-top: 1px solid #e1e1e1;
    padding-top: 3rem;
  }

  .industry-leadership__title {
    font-size: 2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }

  .industry-leadership__content {
    margin-bottom: 2rem;
  }

  .industry-leadership__text {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    color: #333;
  }

  .industry-leadership__image {
    display: flex;
    justify-content: center;
    margin: 2rem 0;
  }

  .industry-leadership__image img {
    max-width: 100%;
    height: auto;
  }
  
  .industry-leadership__article {
    margin-top: 2rem;
    padding: 1.5rem;
    background-color: #f9f9f9;
    border-left: 4px solid #333;
    border-radius: 0 4px 4px 0;
    transition: all 0.3s ease;
  }
  
  .industry-leadership__article:hover {
    background-color: #f0f0f0;
    transform: translateX(5px);
  }
  
  .industry-leadership__article-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.8rem;
    color: #333;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .industry-leadership__article-title svg {
    width: 18px;
    height: 18px;
  }
  
  .industry-leadership__article-content {
    font-style: italic;
    line-height: 1.6;
    margin-bottom: 1rem;
    color: #444;
    position: relative;
  }
  
  .industry-leadership__article-content::before {
    content: '"';
    font-size: 1.8rem;
    position: absolute;
    left: -1rem;
    top: -0.5rem;
    color: #ddd;
  }
  
  .industry-leadership__article-link {
    display: inline-block;
    color: #333;
    font-weight: 500;
    text-decoration: underline;
    transition: color 0.2s ease;
  }
  
  .industry-leadership__article-link:hover {
    color: #000;
  }
  
  /* How We Lead Section Styles */
  .how-we-lead {
    margin-top: 3rem;
    margin-bottom: 3rem;
    border-top: 1px solid #e1e1e1;
    padding-top: 3rem;
  }
  
  .how-we-lead__title {
    font-size: 2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 2.5rem;
    color: #333;
  }
  
  .how-we-lead__columns {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-top: 2rem;
  }
  
  @media screen and (min-width: 750px) {
    .how-we-lead__columns {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media screen and (min-width: 990px) {
    .how-we-lead__columns {
      grid-template-columns: repeat(5, 1fr);
      gap: 1.5rem;
    }
  }
  
  .column {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .column__icon {
    width: 60px;
    height: 60px;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .column__icon svg {
    width: 100%;
    height: 100%;
  }
  
  .column__title {
    font-size: 1.2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 0.8rem;
    color: #333;
  }
  
  .column__text {
    font-size: 0.9rem;
    line-height: 1.4;
    text-align: center;
    color: #333;
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <div class="about-us-container">
    <h1 class="about-us-title">{{ section.settings.title | escape }}</h1>
    
    <!-- About Us Section -->
    <div class="about-us-section">
      <div class="about-us-content">
        <div class="about-us-image">
          {%- if section.settings.image != blank -%}
            {{ 
              section.settings.image
              | image_url: width: 600
              | image_tag: 
                loading: 'lazy',
                sizes: '(min-width: 750px) 50vw, 100vw',
                widths: '375, 550, 750, 1100'
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        <div class="about-us-text">
          {%- if section.settings.heading != blank -%}
            <h2>{{ section.settings.heading }}</h2>
          {%- endif -%}
          
          {%- if section.settings.text != blank -%}
            <div class="rte">
              {{ section.settings.text }}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
    
    <!-- Industry Leadership Section -->
    <div class="industry-leadership">
      <h2 class="industry-leadership__title">{{ section.settings.leadership_title }}</h2>
      
      <div class="industry-leadership__content">
        <div class="industry-leadership__text rte">
          {{ section.settings.leadership_text }}
        </div>
        
        <div class="industry-leadership__image">
          {%- if section.settings.leadership_image != blank -%}
            {{
              section.settings.leadership_image
              | image_url: width: 800
              | image_tag:
                loading: 'lazy',
                width: 800,
                height: section.settings.leadership_image.height,
                alt: section.settings.leadership_image.alt | escape
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
        
        <!-- CEO Article Snippet -->
        <a href="{{ section.settings.article_url }}" class="industry-leadership__article" target="_blank" rel="noopener">
          <div class="industry-leadership__article-title">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M19 5v14H5V5h14m0-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" fill="#333"/>
              <path d="M14 17H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z" fill="#333"/>
            </svg>
            {{ section.settings.article_title }}
          </div>
          <div class="industry-leadership__article-content">
            {{ section.settings.article_snippet }}
          </div>
          <span class="industry-leadership__article-link">Read the full article</span>
        </a>
      </div>
    </div>
    
    <!-- How We Lead Section -->
    <div class="how-we-lead">
      <h2 class="how-we-lead__title">{{ section.settings.lead_title }}</h2>
      
      <div class="how-we-lead__columns">
        <!-- Column 1 -->
        <div class="column">
          <div class="column__icon">
            {% if section.settings.column1_icon != blank %}
              {{ section.settings.column1_icon | image_tag: loading: 'lazy' }}
            {% else %}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M17 9V7C17 4.2 14.8 2 12 2C9.2 2 7 4.2 7 7V9C5.3 9 4 10.3 4 12V20C4 21.7 5.3 23 7 23H17C18.7 23 20 21.7 20 20V12C20 10.3 18.7 9 17 9ZM9 7C9 5.3 10.3 4 12 4C13.7 4 15 5.3 15 7V9H9V7ZM18 20C18 20.6 17.6 21 17 21H7C6.4 21 6 20.6 6 20V12C6 11.4 6.4 11 7 11H17C17.6 11 18 11.4 18 12V20Z" fill="#333"/>
              </svg>
            {% endif %}
          </div>
          <h3 class="column__title">{{ section.settings.column1_title }}</h3>
          <div class="column__text">{{ section.settings.column1_text }}</div>
        </div>
        
        <!-- Column 2 -->
        <div class="column">
          <div class="column__icon">
            {% if section.settings.column2_icon != blank %}
              {{ section.settings.column2_icon | image_tag: loading: 'lazy' }}
            {% else %}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M19.5 3h-15C3.7 3 3 3.7 3 4.5v15C3 20.3 3.7 21 4.5 21h15c0.8 0 1.5-0.7 1.5-1.5v-15C21 3.7 20.3 3 19.5 3zM19 19H5V5h14V19z" fill="#333"/>
                <path d="M7 7h10v2H7V7zM7 11h10v2H7v-2zM7 15h7v2H7v-2z" fill="#333"/>
              </svg>
            {% endif %}
          </div>
          <h3 class="column__title">{{ section.settings.column2_title }}</h3>
          <div class="column__text">{{ section.settings.column2_text }}</div>
        </div>
        
        <!-- Column 3 -->
        <div class="column">
          <div class="column__icon">
            {% if section.settings.column3_icon != blank %}
              {{ section.settings.column3_icon | image_tag: loading: 'lazy' }}
            {% else %}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM12 20C7.59 20 4 16.41 4 12C4 7.59 7.59 4 12 4C16.41 4 20 7.59 20 12C20 16.41 16.41 20 12 20Z" fill="#333"/>
                <path d="M12 17L17 12L12 7L10.59 8.41L13.17 11H7V13H13.17L10.59 15.59L12 17Z" fill="#333"/>
              </svg>
            {% endif %}
          </div>
          <h3 class="column__title">{{ section.settings.column3_title }}</h3>
          <div class="column__text">{{ section.settings.column3_text }}</div>
        </div>
        
        <!-- Column 4 -->
        <div class="column">
          <div class="column__icon">
            {% if section.settings.column4_icon != blank %}
              {{ section.settings.column4_icon | image_tag: loading: 'lazy' }}
            {% else %}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 6.5c1.4 0 2.5 1.1 2.5 2.5s-1.1 2.5-2.5 2.5S9.5 10.4 9.5 9 10.6 6.5 12 6.5zM12 13c2.5 0 5.5 1.3 5.5 2.5V17h-11v-1.5c0-1.2 3-2.5 5.5-2.5z" fill="#333"/>
                <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.4 0-8-3.6-8-8s3.6-8 8-8 8 3.6 8 8-3.6 8-8 8z" fill="#333"/>
              </svg>
            {% endif %}
          </div>
          <h3 class="column__title">{{ section.settings.column4_title }}</h3>
          <div class="column__text">{{ section.settings.column4_text }}</div>
        </div>
        
        <!-- Column 5 -->
        <div class="column">
          <div class="column__icon">
            {% if section.settings.column5_icon != blank %}
              {{ section.settings.column5_icon | image_tag: loading: 'lazy' }}
            {% else %}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M19.5 3.5L18 2l-1.5 1.5L15 2l-1.5 1.5L12 2l-1.5 1.5L9 2 7.5 3.5 6 2 4.5 3.5 3 2v20l1.5-1.5L6 22l1.5-1.5L9 22l1.5-1.5L12 22l1.5-1.5L15 22l1.5-1.5L18 22l1.5-1.5L21 22V2l-1.5 1.5z" fill="#333"/>
                <path d="M15 14H9v-2h6v2zm0-4H9V8h6v2z" fill="#333"/>
              </svg>
            {% endif %}
          </div>
          <h3 class="column__title">{{ section.settings.column5_title }}</h3>
          <div class="column__text">{{ section.settings.column5_text }}</div>
        </div>
      </div>
    </div>
  </div>
</div>


{% comment %}
  Section: About Us - In the News
  Displays three A4-sized images in a grid layout
{% endcomment %}

<style>
  .about-us-in-the-news {
    padding: 40px 0;
    background-color: {{ section.settings.background_color }};
  }

  .about-us-in-the-news__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .about-us-in-the-news__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .about-us-in-the-news__title {
    font-size: 2.5rem;
    font-weight: bold;
    color: {{ section.settings.title_color }};
    margin: 0;
  }

  .about-us-in-the-news__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-top: 30px;
  }

  .about-us-in-the-news__image-wrapper {
    position: relative;
    padding-top: 141.42%; /* 1:1.4142 ratio for A4 (297mm/210mm) */
  }

  .about-us-in-the-news__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .about-us-in-the-news__image:hover {
    transform: scale(1.02);
  }

  @media (max-width: 991px) {
    .about-us-in-the-news__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 767px) {
    .about-us-in-the-news__grid {
      grid-template-columns: 1fr;
    }
    
    .about-us-in-the-news__title {
      font-size: 2rem;
    }
  }
</style>

<div class="about-us-in-the-news">
  <div class="about-us-in-the-news__container">
    <div class="about-us-in-the-news__header">
      <h2 class="about-us-in-the-news__title">{{ section.settings.title }}</h2>
    </div>
    
    <div class="about-us-in-the-news__grid">
      {% for block in section.blocks %}
        <div class="about-us-in-the-news__image-wrapper">
          <img 
            src="{{ block.settings.image | image_url: width: 800 }}" 
            alt="{{ block.settings.image.alt | escape }}"
            class="about-us-in-the-news__image"
            loading="lazy"
          >
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}

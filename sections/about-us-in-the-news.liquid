  "name": "About Us - In the News",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "In the News"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Us - In the News",
      "blocks": [
        {
          "type": "image",
          "settings": {
            "image": ""
          }
        },
        {

      "label": "Warehouse Hours (Monday-Friday)"
    },
    {
      "type": "text",
      "id": "warehouse_hours_saturday",
      "default": "Saturday: 8:00 - 12:00",
      "label": "Warehouse Hours (Saturday)"
    },
    {
      "type": "header",
      "content": "Email Information"
    },
    {
      "type": "text",
      "id": "email_label",
      "default": "Email",
      "label": "Email Label"
    },
    {
      "type": "text",
      "id": "email_address",
      "default": "marketing@ecovargroup.com",

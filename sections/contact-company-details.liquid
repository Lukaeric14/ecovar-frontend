    {
      "type": "header",
      "content": "Map Settings"
    },
    {
      "type": "html",
      "id": "map_embed_code",
      "label": "Google Maps Embed Code",
      "info": "Paste your Google Maps embed code here"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",

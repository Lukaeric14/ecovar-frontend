    },
    {
      "type": "header",
      "content": "Phone Information"
    },
    {
      "type": "text",
      "id": "phone_label",
      "default": "Phone",
      "label": "Phone Label"
    },
    {
      "type": "text",
      "id": "phone_number",
      "default": "+971 4 36633 02",
      "label": "Phone Number"
    },
    {
      "type": "header",
      "content": "Hours Information"
    },
    {
      "type": "text",

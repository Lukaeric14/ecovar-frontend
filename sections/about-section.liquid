{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .about-section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .about-section-title {
    font-size: 2.5rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 2rem;
  }

  .about-section-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media screen and (min-width: 750px) {
    .about-section-content {
      grid-template-columns: 1fr 2fr;
      gap: 3rem;
    }
  }

  .about-section-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .about-section-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .about-section-text h2 {
    font-size: 1.8rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .about-section-text p {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="about-section-container">
    <h1 class="about-section-title">{{ section.settings.title | escape }}</h1>
    
    <div class="about-section-content">
      <div class="about-section-image">
        {%- if section.settings.image != blank -%}
          {{ 
            section.settings.image
            | image_url: width: 600
            | image_tag: 
              loading: 'lazy',
              sizes: '(min-width: 750px) 50vw, 100vw',
              widths: '375, 550, 750, 1100'
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>

      <div class="about-section-text">
        {%- if section.settings.heading != blank -%}
          <h2>{{ section.settings.heading }}</h2>
        {%- endif -%}
        
        {%- if section.settings.text != blank -%}
          <div class="rte">
            {{ section.settings.text }}
          </div>
        {%- endif -%}
        
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'paragraph' -%}
              <div class="rte" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "About Us",
      "label": "Section Title"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Section Heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Share information about your company, your team, or your mission. Use this space to provide background on your business or details about your core values.</p>",
      "label": "Text"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "paragraph",
      "name": "Paragraph",
      "limit": 3,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Add additional paragraphs to expand on your company information.</p>",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Section",
      "settings": {
        "title": "About Us",
        "heading": "Our Story"
      },
      "blocks": [
        {
          "type": "paragraph"
        }
      ]
    }
  ]
}
{% endschema %}

{% comment %}
  This section displays company contact information including multiple addresses with maps, phone, hours, and email.
  It is designed to be configurable through the Shopify Theme Editor.
{% endcomment %}

<div class="company-contact-section page-width{% if section.settings.full_width %} company-contact-section--full-width{% endif %}">
  <h2 class="company-contact-section__main-heading">{{ section.settings.main_heading }}</h2>

  {% if section.settings.show_address_section %}
    <div class="contact-group contact-group--address">
      <div class="contact-group__header">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-address">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
          <circle cx="12" cy="10" r="3"></circle>
        </svg>
        <h3 class="contact-group__title">{{ section.settings.address_section_heading }}</h3>
      </div>

      <!-- First row: Office and New Office -->
      <div class="location-row">
        {% if section.settings.show_office_address %}
          <div class="location-block location-block--wide">
            <div class="location-block__details">
              <h4 class="location-block__title">{{ section.settings.office_label }}</h4>
              <div class="location-block__address">
                {{ section.settings.office_address | newline_to_br }}
              </div>
            </div>
            {% if section.settings.office_map_embed_code != blank %}
              <div class="location-block__map">
                {{ section.settings.office_map_embed_code }}
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.show_new_office_address %}
          <div class="location-block location-block--wide">
            <div class="location-block__details">
              <h4 class="location-block__title">{{ section.settings.new_office_label }}</h4>
              <div class="location-block__address">
                {{ section.settings.new_office_address | newline_to_br }}
              </div>
            </div>
            {% if section.settings.new_office_map_embed_code != blank %}
              <div class="location-block__map">
                {{ section.settings.new_office_map_embed_code }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
      
      <!-- Second row: Warehouse -->
      <div class="location-row">
        {% if section.settings.show_warehouse_address %}
          <div class="location-block location-block--full">
            <div class="location-block__details">
              <h4 class="location-block__title">{{ section.settings.warehouse_label }}</h4>
              <div class="location-block__address">
                {{ section.settings.warehouse_address | newline_to_br }}
              </div>
            </div>
            {% if section.settings.warehouse_map_embed_code != blank %}
              <div class="location-block__map">
                {{ section.settings.warehouse_map_embed_code }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}

  {% if section.settings.show_phone_section %}
    <div class="contact-group contact-group--phone">
      <div class="contact-group__header">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-phone">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
        </svg>
        <h3 class="contact-group__title">{{ section.settings.phone_section_heading }}</h3>
      </div>
      <div class="contact-group__content">
        <a href="tel:{{ section.settings.phone_number | replace: ' ', '' }}">{{ section.settings.phone_number }}</a>
      </div>
    </div>
  {% endif %}

  {% if section.settings.show_hours_section %}
    <div class="contact-group contact-group--hours">
      <div class="contact-group__header">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-clock">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
        <h3 class="contact-group__title">{{ section.settings.hours_section_heading }}</h3>
      </div>
      <div class="contact-group__content hours-content">
        {% if section.settings.office_hours != blank %}
            <div class="hours-entry">
                <span class="hours-entry__label">{{ section.settings.office_label }}:</span>
                <span class="hours-entry__text">{{ section.settings.office_hours | newline_to_br }}</span>
            </div>
        {% endif %}
        {% if section.settings.warehouse_hours != blank %}
            <div class="hours-entry">
                <span class="hours-entry__label">{{ section.settings.warehouse_label }}:</span>
                <span class="hours-entry__text">{{ section.settings.warehouse_hours | newline_to_br }}</span>
            </div>
        {% endif %}
      </div>
    </div>
  {% endif %}

  {% if section.settings.show_email_section %}
    <div class="contact-group contact-group--email">
      <div class="contact-group__header">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-email">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
        <h3 class="contact-group__title">{{ section.settings.email_section_heading }}</h3>
      </div>
      <div class="contact-group__content">
        <a href="mailto:{{ section.settings.email_address }}">{{ section.settings.email_address }}</a>
      </div>
    </div>
  {% endif %}
</div>


{{ 'section-company-contact.css' | asset_url | stylesheet_tag }}

<div class="company-contact{% if section.settings.full_width %} company-contact--full-width{% endif %}">
  <div class="page-width">
    <div class="company-contact__container">
      <div class="company-contact__details">
        <h2 class="company-contact__heading">{{ section.settings.heading }}</h2>
        
        {% if section.settings.show_address %}
        <div class="contact-item">
          <div class="contact-item__header">
            <div class="contact-item__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-address">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <h3 class="contact-item__title">{{ section.settings.address_heading }}</h3>
          </div>
          <div class="contact-item__content">
            
            <div class="address-columns">
              {% if section.settings.show_office_address %}
                <div class="address-column">
                  <h4 class="address-column__title">{{ section.settings.office_label }}</h4>
                  <div class="address-column__text">
                    {{ section.settings.office_address | replace: ',', '<br>' | replace: '|', '<br>' }}
                  </div>
                </div>
              {% endif %}
              
              {% if section.settings.show_warehouse_address %}
                <div class="address-column">
                  <h4 class="address-column__title">{{ section.settings.warehouse_label }}</h4>
                  <div class="address-column__text">
                    {{ section.settings.warehouse_address | replace: ',', '<br>' | replace: '|', '<br>' }}
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
        {% endif %}

        {% if section.settings.show_phone %}
        <div class="contact-item">
          <div class="contact-item__header">
            <div class="contact-item__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-phone">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <h3 class="contact-item__title">{{ section.settings.phone_heading }}</h3>
          </div>
          <div class="contact-item__content">
            <a href="tel:{{ section.settings.phone_number | replace: ' ', '' }}" class="contact-item__link">
              {{ section.settings.phone_number }}
            </a>
          </div>
        </div>
        {% endif %}

        {% if section.settings.show_hours %}
        <div class="contact-item">
          <div class="contact-item__header">
            <div class="contact-item__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-clock">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <h3 class="contact-item__title">{{ section.settings.hours_heading }}</h3>
          </div>
          <div class="contact-item__content">
            
            <div class="hours-columns">
              {% if section.settings.show_office_hours %}
                <div class="hours-column">
                  <h4 class="hours-column__title">{{ section.settings.office_label }}</h4>
                  <div class="hours-column__text">
                    {{ section.settings.office_hours | replace: ',', '<br>' | replace: '|', '<br>' }}
                  </div>
                </div>
              {% endif %}
              
              {% if section.settings.show_warehouse_hours %}
                <div class="hours-column">
                  <h4 class="hours-column__title">{{ section.settings.warehouse_label }}</h4>
                  <div class="hours-column__text">
                    {{ section.settings.warehouse_hours | replace: ',', '<br>' | replace: '|', '<br>' }}
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
        {% endif %}

        {% if section.settings.show_email %}
        <div class="contact-item">
          <div class="contact-item__header">
            <div class="contact-item__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-email">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <h3 class="contact-item__title">{{ section.settings.email_heading }}</h3>
          </div>
          <div class="contact-item__content">
            <a href="mailto:{{ section.settings.email_address }}" class="contact-item__link contact-item__link--email">
              {{ section.settings.email_address }}
            </a>
          </div>
        </div>
        {% endif %}
      </div>
      
      <div class="company-contact__map">
        {% if section.settings.map_embed_code != blank %}
          <div class="map-container">
            {{ section.settings.map_embed_code }}
          </div>
        {% else %}
          <div class="map-placeholder">
            <div class="map-placeholder__text">
              {{ 'sections.map.placeholder' | t }}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .company-contact {
    padding: 60px 0;
    background-color: {{ section.settings.background_color }};
  }
  
  .company-contact--full-width .company-contact__container {
    max-width: 100%;
    padding: 0;
  }
  
  .company-contact__container {
    display: flex;
    flex-direction: column;
  }
  
  @media screen and (min-width: 750px) {
    .company-contact__container {
      flex-direction: row;
      gap: 40px;
    }
  }
  
  .company-contact__details {
    flex: 1;
    padding-right: 20px;
  }
  
  .company-contact__map {
    flex: 1;
    min-height: 300px;
  }
  
  .company-contact__heading {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 30px;
    color: {{ section.settings.heading_color }};
  }
  
  .contact-item {
    margin-bottom: 30px;
  }
  
  .contact-item__header {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .contact-item__icon {
    flex: 0 0 35px;
    margin-right: 15px;
  }
  
  .contact-item__icon svg {
    width: 24px;
    height: 24px;
    color: {{ section.settings.icon_color }};
    vertical-align: middle;
    display: block;
  }
  
  .contact-item__content {
    flex: 1;
  }
  
  .contact-item__title {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
    color: {{ section.settings.title_color }};
    line-height: 24px; /* Matches icon height */
  }
  
  .address-columns,
  .hours-columns {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
  
  @media screen and (min-width: 750px) {
    .address-columns,
    .hours-columns {
      flex-direction: row;
      gap: 30px;
    }
    
    .address-column,
    .hours-column {
      flex: 1;
    }
  }
  
  .address-column__title,
  .hours-column__title {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 5px;
    color: {{ section.settings.subtitle_color }};
  }
  
  .address-column__text,
  .hours-column__text {
    font-size: 14px;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
  }
  
  .contact-item__link {
    display: inline-block;
    font-size: 16px;
    text-decoration: none;
    color: {{ section.settings.link_color }};
    transition: color 0.2s ease;
  }
  
  .contact-item__link:hover {
    color: {{ section.settings.link_hover_color }};
    text-decoration: underline;
  }
  
  .contact-item__link--email {
    color: {{ section.settings.email_color }};
  }
  
  .map-container {
    width: 100%;
    height: 100%;
    min-height: 400px;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .map-container iframe {
    width: 100%;
    height: 100%;
    min-height: 400px;
    border: 0;
  }
  
  .map-placeholder {
    width: 100%;
    height: 100%;
    min-height: 400px;
    background-color: #f5f5f5;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .map-placeholder__text {
    font-size: 16px;
    color: #666;
  }
</style>


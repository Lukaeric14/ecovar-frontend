{% comment %}
Section: Company Logos Marquee
Smooth continuous scroll of up to 10 logos using CSS animation and duplication for seamless looping.
{% endcomment %}

<section class="company-logos-marquee">
  <div class="marquee__wrapper">
    <div class="marquee__content">
      {%- for block in section.blocks -%}
        {% if block.settings.logo_image != blank %}
          <img src="{{ block.settings.logo_image | img_url: '200x' }}" alt="Logo {{ forloop.index }}" class="marquee__item">
        {% endif %}
      {%- endfor -%}
      {%- for block in section.blocks -%}
        {% if block.settings.logo_image != blank %}
          <img src="{{ block.settings.logo_image | img_url: '200x' }}" alt="Logo {{ forloop.index }} duplicate" class="marquee__item">
        {% endif %}
      {%- endfor -%}
    </div>
  </div>
  <div class="partners-button-container">
    <a href="/pages/partners" class="partners-button">Explore our partners</a>
  </div>
</section>

<style>
.company-logos-marquee {
  overflow: hidden;
  width: 100%;
}
.company-logos-marquee .marquee__wrapper {
  overflow: hidden;
  width: 100%;
}
.company-logos-marquee .marquee__content {
  display: inline-block;
  white-space: nowrap;
  animation: marquee-scroll 50s linear infinite;
}
.company-logos-marquee .marquee__item {
  display: inline-block;
  vertical-align: middle;
  max-height: 80px;
  height: auto;
  margin: 0 2rem;
}
@keyframes marquee-scroll {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

.partners-button-container {
  text-align: center;
  margin-top: 3rem; /* Increased top margin */
  margin-bottom: 4rem; /* Significantly increased bottom margin */
  padding: 0 15px; /* Add some padding for smaller screens */
}

.partners-button {
  display: inline-block;
  padding: 12px 25px;
  background-color: #b8bb8a; /* Updated to light green */
  color: #ffffff;
  text-decoration: none;
  border-radius: 4px;
  font-weight: bold;
  transition: background-color 0.3s ease;
  border: none;
  cursor: pointer;
}

.partners-button:hover {
  background-color: #a8ab7a; /* Darker shade of light green for hover */
}
</style>

{% schema %}
{
  "name": "Company Logos Marquee",
  "settings": [],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo image"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Company Logos Marquee",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% comment %}
  sections/custom-footer.liquid
{% endcomment %}

<section class="custom-footer">
  <div class="wrapper">
    <!-- Logo Column -->
    <div class="footer-col footer-logo">
      {% if section.settings.logo_image != blank %}
        <img src="{{ section.settings.logo_image | img_url: '200x' }}" alt="{{ shop.name }}" />
      {% endif %}
    </div>

    <!-- Categories Column -->
    <div class="footer-col footer-categories">
      <h3>Categories</h3>
      <ul>
        {% for block in section.blocks %}
          {% if block.type == 'category_link' %}
            <li>
              <a href="{{ block.settings.link_url }}">
                {{ block.settings.link_text }}
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>

    <!-- Quick Links Column -->
    <div class="footer-col footer-links">
      <h3>Quick Links</h3>
      <ul>
        {% for block in section.blocks %}
          {% if block.type == 'quick_link' %}
            <li>
              <a href="{{ block.settings.link_url }}">
                {{ block.settings.link_text }}
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>

    <!-- Contact Column -->
    <div class="footer-col footer-contact">
      <h3>Contact</h3>
      <div class="contact-content">
        {% for block in section.blocks %}
          {% if block.type == 'contact_line' %}
            <p>{{ block.settings.contact_text }}</p>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <!-- Bottom Copyright Bar -->
  <div class="footer-bottom">
    <p>Â© Copyright {{ 'now' | date: '%Y' }} | {{ shop.name }}</p>
  </div>

  <style>
    .custom-footer { background: #fff; padding: 40px 0; font-family: sans-serif; }
    .custom-footer .wrapper { display: flex; flex-wrap: wrap; gap: 40px; max-width: 1200px; margin: 0 auto; }
    .custom-footer .footer-col { flex: 1; min-width: 200px; }
    .footer-logo img { max-width: 150px; }
    .footer-col h3 { margin-bottom: 16px; font-size: 18px; font-weight: bold; }
    .footer-col ul { list-style: none; padding: 0; margin: 0; }
    .footer-col ul li { margin-bottom: 8px; }
    .footer-col ul li a { color: #333; text-decoration: none; }
    .footer-contact .contact-content p { margin: 0 0 8px; color: #333; line-height: 1.5; }
    .footer-bottom { text-align: center; padding: 16px 0; border-top: 1px solid #eee; font-size: 14px; color: #777; }
    @media (max-width: 768px) {
      .custom-footer .wrapper { flex-direction: column; align-items: center; }
      .custom-footer .footer-col { text-align: center; }
    }
  </style>
</section>

{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image"
    }
  ],
  "blocks": [
    {
      "type": "category_link",
      "name": "Category Link",
      "settings": [
        { "type": "text", "id": "link_text", "label": "Category name", "default": "Insecticides" },
        { "type": "url",  "id": "link_url",  "label": "Category URL",  "default": "/" }
      ]
    },
    {
      "type": "quick_link",
      "name": "Quick Link",
      "settings": [
        { "type": "text", "id": "link_text", "label": "Link label", "default": "About Us" },
        { "type": "url",  "id": "link_url",  "label": "Link URL",  "default": "/" }
      ]
    },
    {
      "type": "contact_line",
      "name": "Contact Line",
      "settings": [
        { "type": "text", "id": "contact_text", "label": "Contact line text", "default": "Ecovar Trading LLC" }
      ]
    }
  ],
  "max_blocks": 60,
  "presets": [
    { "name": "Custom Footer" }
  ]
}
{% endschema %}
